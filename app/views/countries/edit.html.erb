<%= form_for @country do |f| %>
  <%= f.label :name %>
  <%= f.text_field :name %>
  <br>
  <%= f.label :flag %>
  <%= f.text_field :flag %>
  <br>
  <%= f.label :size %>
  <%= f.number_field :size %>
  <br>
  <%= f.label :population %>
  <%= f.number_field :population %>
  <br>
  <%= f.label :language%>
  <%= f.text_field :language%>
  <br>
  <%= f.label :travel_advice %>
  <%= f.text_field :travel_advice %>
  <br><br>
  <%= f.submit 'Add country' %>
<% end %>